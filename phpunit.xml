<phpunit bootstrap="autoload.php">
  <testsuites>
    <testsuite name="all">
      <directory>Tests</directory>
    </testsuite>
  </testsuites>
  <filter>
    <blacklist>
      <directory suffix=".php">Tests/</directory>
    </blacklist>
    <whitelist processUncoveredFilesFromWhitelist="true">
      <directory suffix=".php">Domain/</directory>
    </whitelist>
  </filter>
</phpunit>
